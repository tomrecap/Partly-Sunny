<!DOCTYPE html>
<html>
<head>
  <title>Partly Sunny</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="">

  <header>
    <section class="header-content">
      <a href="<%= root_url %>">
        <h1 class="site-logo">Partly Sunny</h1>
      </a>

      <nav>

        <ul>
          <li>
            <form action="<%= search_zip_codes_url %>" method="get" class="input">

              <input
                type="search"
                name="search_query"
                value=""
                id="search_query"
                placeholder="Search & Favorites">

              <div class="nav-bar-dropdown favorites hidden">
                <%= render "nav_bar_dropdowns/favorite_zip_codes_weather", current_user: current_user %>
              </div>

              <%= insert_form_authenticity_token %>

              <input class="submit" type="submit" value="Search">


            </form>
          </li>

          <li class="icon show-modal" >
            <a href="#">
              <i id="new-post"></i>
              Post a New Weather Report or Photo
            </a>

            <div class="nav-bar-dropdown triangle-up">
              <div class="inner-triangle-up"></div>
              <%= render "nav_bar_dropdowns/post_button_explanation", current_user: current_user %>
            </div>
          </li>

          <li class="icon">
            <a href="">
              <i id="notifications"></i>
              Notifications
            </a>

            <div class="nav-bar-dropdown triangle-up">
              <div class="inner-triangle-up"></div>
              <%= render "nav_bar_dropdowns/notifications", current_user: current_user %>
            </div>
          </li>

          <li class="icon">
            <a href="<%= user_gallery_url(current_user) if signed_in? %>">
              <i id="user-menu"></i>
              User Menu
            </a>

            <div class="nav-bar-dropdown triangle-up" id="user-menu-box">
              <div class="inner-triangle-up"></div>
              <%= render "nav_bar_dropdowns/user_menu", current_user: current_user %>
            </div>
          </li>

          <li class="icon">
            <a href="<%= edit_user_url(current_user) if signed_in? %>">
              <i id="settings-menu"></i>
              Settings Menu
            </a>

            <div class="nav-bar-dropdown triangle-up">
              <div class="inner-triangle-up"></div>
              <%= render "nav_bar_dropdowns/settings_menu", current_user: current_user %>
            </div>
          </li>
        </ul>
      </nav>
    </section>
  </header>

  <div class="content group">

  <!-- The body should consist of two columns: -->
    <!-- left-column & main-column OR -->
    <!-- zip_code-weather-left-column & zip_code-weather-right-column -->

    <%= yield %>

  </div>

  <footer>

  </footer>

  <section class="modal">
    <section class="modal-box">
      <span class="modal-close-button">&times;</span>

      <div id="modal-container">
        <%= render "weather_reports/new_with_photo",
          weather_conditions: @weather_conditions,
          photo: @new_photo %>
      </div>
    </section>
  </section>

<!-- <p>params: <%= params %></p>
<p>session: <%= session %></p> -->

<%= "<p>errors: #{flash[:errors]} </p>".html_safe if flash[:errors] %>
<%= "<p>notice: #{flash[:notice]} </p>".html_safe if flash[:notice] %>

<%#= render "layouts/navigation_bar_signed_in" if signed_in? %>
<%#= render "layouts/navigation_bar_not_signed_in" if !signed_in? %>

<script>

$(document).ready(function() {

  window.modal = {
    show: function(){
      $("body").addClass("has-active-modal");
    },
    hide: function(){
      $("body").removeClass("has-active-modal");
    }
  };

  $("body").on("click", ".show-modal", function(event){
    event.preventDefault();
    window.modal.show();
  });

  $(".modal").on("click", function(event){

    $target = $(event.target);
    if($target.is(".modal") || $target.is(".modal-close-button")){
      event.preventDefault();
      window.modal.hide();
    }
  });

  $(".favorite-form").addClass("hidden");

  $(".current-weather-summary").on("click","a.favorite", function(event) {
    event.preventDefault();
    var that = this;
    var urlStub = "<%= modify_favorite_zip_code_links_url %>?zip_code_id=";
    var zipCodeId = $(this).attr("data-zip-code-id");
    var completeUrl = urlStub + zipCodeId;

    if ($(this).hasClass("true")) {
      $.ajax({
        url: completeUrl,
        type: "DELETE",
        success: changeStarToUnfavorited(that)
      });
    } else {
      $.ajax({
        url: completeUrl,
        type: "POST",
        success: changeStarToFavorited(that)
      });
    };
  });

});

</script>

</body>
</html>
