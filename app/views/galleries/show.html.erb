<!-- /app/views/galleries/show.html.erb -->

<h1 class="page-title">Weather Photos for: <%= @name %></h1>

<section class="left-column">
  <section class="user-profile-box">
    <%= (render "user_details", user: @subject) if @subject.is_a?(User) %>
    <%= (render "city_details", city: @subject) if @subject.is_a?(City) %>
  </section>
</section>

<section class="main-column">
  <section class="photo-feed">
    <% if @photos.nil? || @photos.length == 0 %>
      This user hasn't uploaded any photos yet.
    <% else %>

      <%= paginate @photos %>

      <%= render "photos/full_feed", photos: @photos %>

      <%= paginate @photos %>

    <% end %>

  </section>
</section>
