<!-- app/views/cities/search.html.erb -->

<div class="content city-weather">

<header>
  <a href="<%= root_url %>"><%= image_tag "http://placehold.it/350x150&text=Logo", class: "logo" %></a>
  <h1 class="page-title">Search Results for &ldquo;<%= @search_query %>&rdquo;</h1>
  <nav>
    <%= render "layouts/navigation_bar_signed_in" if signed_in? %>
    <%= render "layouts/navigation_bar_not_signed_in" if !signed_in? %>
  </nav>
</header>


<section class="main-columns">
  <section class="city-picker">
    <%= render "cities/city_picker", cities: @cities %>
  </section>

  <section class="middle-column">
    <section class="search-results">
      <h2 class="section-title"></h2>

      <% if @search_results.empty? %>
        <p>
          We don't have a city with that name in our database. Please check back as we expand to more cities.
        </p>
      <% else %>
        <ul>
          <% @search_results.each do |result| %>
            <li><%= result %></li>
          <% end %>
        </ul>
      <% end %>
    </section>
  </section>

  <section class="right-column">

  </section>
</section>

</div>