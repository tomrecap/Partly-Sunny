<h1>Welcome, <%= @user.user_name %></h1>

<p>
  Your favorite zip_codes:
  <ul>
    <% @user.favorite_zip_codes.each do |zip_code| %>
      <li><%= render "zip_codes/current_weather_summary", zip_code: zip_code %></li>
    <% end %>
  </ul>
</p>

<p>
  Your favorite users:
  <ul>
    <% @user.favorited_users.each do |user| %>
      <li><%= link_to user.user_name, user_url(user) %></li>
    <% end %>
  </ul>
</p>

<section class="recent-photos">
  <h2 class="section-title">Latest Photos</h2>
  <%= render "photos/last_four_photos", photos: @user.photos %>
</section>

</section>